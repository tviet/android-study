<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:id="@+id/menu_bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button android:id="@+id/btn_today"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/today"
            style="@android:style/ButtonBar"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@android:color/holo_red_light"
            android:textAlignment="center"
            android:onClick="onClick"
            android:textStyle="bold"/>
        <Button android:id="@+id/btn_last_week"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@android:style/ButtonBar"
            android:background="@android:color/holo_red_light"
            android:text="@string/last_week"
            android:gravity="center"
            android:textSize="15sp"
            android:textAlignment="center"
            android:onClick="onClick"
            android:textStyle="bold"/>
        <Button android:id="@+id/btn_hot"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@android:style/ButtonBar"
            android:background="@android:color/holo_red_light"
            android:text="@string/hot"
            android:gravity="center"
            android:onClick="onClick"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/content_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView android:id="@+id/content_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>